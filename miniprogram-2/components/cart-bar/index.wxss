.cart-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.cart-bar--fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.cart-bar__left {
  display: flex;
  align-items: center;
}

.all-select {
  display: flex;
  align-items: center;
}

.checkbox-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.select-text {
  font-size: 28rpx;
  color: #333;
}

.cart-bar__right {
  display: flex;
  align-items: center;
}

.price-wrap {
  margin-right: 24rpx;
}

.price-text {
  font-size: 28rpx;
  color: #333;
}

.discount {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #fa4126;
}

.submit-btn {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #fa4126;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
} 