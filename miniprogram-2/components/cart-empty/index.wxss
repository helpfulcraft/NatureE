.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.cart-empty__icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.cart-empty__text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.cart-empty__button {
  width: 240rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #fa4126;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
} 