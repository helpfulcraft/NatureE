.cart-group {
  background-color: #f5f5f5;
}

.store-card {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.store-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.store-checkbox {
  margin-right: 20rpx;
}

.checkbox-icon {
  width: 40rpx;
  height: 40rpx;
}

.store-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.goods-list {
  padding: 0 20rpx;
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-item--last {
  border-bottom: none;
}

.goods-checkbox {
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-specs {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.goods-price-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-num {
  display: flex;
  align-items: center;
}

.num-btn {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  color: #333;
  font-size: 28rpx;
}

.num-btn--disabled {
  color: #ccc;
  background-color: #f5f5f5;
}

.num-value {
  width: 80rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #333;
}

.invalid-goods {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.invalid-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.invalid-title {
  font-size: 28rpx;
  color: #999;
}

.clear-invalid {
  font-size: 24rpx;
  color: #fa4126;
}

.invalid-list {
  padding: 0 20rpx;
}

.invalid-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.invalid-item--last {
  border-bottom: none;
}

.invalid-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.invalid-content {
  flex: 1;
}

.invalid-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.invalid-status {
  font-size: 24rpx;
  color: #fa4126;
} 