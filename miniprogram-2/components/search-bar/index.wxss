.search-bar {
  padding: 24rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 自定义搜索框样式 */
.t-search {
  --td-search-bg-color: #f5f5f5;
  --td-search-padding: 16rpx 24rpx;
  --td-search-height: 80rpx;
  --td-search-border-radius: 40rpx;
  --td-search-text-color: #333;
  --td-search-placeholder-color: #999;
  --td-search-action-color: #333;
} 