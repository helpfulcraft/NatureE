.custom-tab-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.custom-tab-bar-wrapper .text {
  font-size: 20rpx;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #eee;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.tab-bar-item .text {
  font-size: 20rpx;
  margin-top: 4rpx;
  color: #666666;
}

.tab-bar-item.active .text {
  color: #FA4126;
}

/* 购物车数量样式 */
.t-badge {
  margin-top: -16rpx;
}

.t-tab-bar {
  --td-tab-bar-border-color: #f5f5f5;
  --td-tab-bar-bg-color: #fff;
  --td-tab-bar-height: 112rpx;
}

.t-tab-bar-item {
  --td-tab-bar-item-color: #666;
  --td-tab-bar-item-active-color: #fa4126;
}

.t-tab-bar-item__icon {
  font-size: 48rpx !important;
  margin-bottom: 4rpx;
}

.t-tab-bar-item__text {
  font-size: 24rpx;
}

.t-tab-bar-item__icon-wrap {
  position: relative;
}
