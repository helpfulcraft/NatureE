.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
}

.cart-empty__image {
  width: 240rpx;
  height: 240rpx;
  margin: 48rpx 0;
}

.cart-empty__text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.cart-empty__button {
  width: 240rpx !important;
}

/* 推荐商品 */
.recommend {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.recommend-title {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.recommend-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.recommend-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.goods-info {
  padding: 16rpx;
}

.goods-name {
  font-size: 26rpx;
  color: #333;
  line-height: 36rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
} 