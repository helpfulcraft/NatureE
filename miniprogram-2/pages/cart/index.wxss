:host {
  padding-bottom: 0;
}

.gap {
  height: 20rpx;
  background-color: #f5f5f5;
}

.t-button {
  --td-button-default-color: #000;
  --td-button-primary-text-color: #fa4126;
}

.cart-container {
  min-height: 100vh;
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
  background: linear-gradient(135deg, rgba(255, 95, 21, 0.08), rgba(29, 149, 63, 0.05));
}

.cart-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
  position: relative;
}

.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.empty-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fa4126;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.cart {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 100rpx;
}

.cart-list {
  margin-bottom: 200rpx;
  padding: 24rpx;
}

.card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.8));
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 1px solid rgba(255, 95, 21, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  overflow: visible;
}

.cart-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 24rpx 24rpx 16rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  gap: 0;
}

.item-select {
  margin-right: 12rpx;
  flex-shrink: 0;
  padding-top: 60rpx;
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-info {
  flex: 1;
  display: flex;
  gap: 20rpx;
  min-width: 0;
  padding-right: 60rpx;
}

.item-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-width: 0;
  height: auto;
  gap: 12rpx;
}

.item-title {
  font-size: 28rpx;
  line-height: 1.4;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: 500;
  word-break: break-all;
  margin-top: -4rpx;
}

.item-specs {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: rgba(255, 95, 21, 0.1);
  border-radius: 6rpx;
  display: inline-block;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-specs text {
  margin-right: 10rpx;
}

.item-price-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
  gap: 16rpx;
}

.item-delete {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  padding: 8rpx;
  color: #999;
  transition: all 0.3s ease;
  z-index: 1;
}

.item-delete:active {
  transform: scale(0.9);
  color: #FF5F15;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.cart-bar {
  display: none;
}

.cart-footer {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx !important;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.8));
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(255, 95, 21, 0.1);
  z-index: 100;
}

.footer-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 底部全选区域样式 */
.footer-left .t-checkbox {
  display: inline-flex !important;
  align-items: center;
  width: auto !important;
  height: 36rpx !important;
  padding: 0;
  transform: none;
  position: relative;
}

.footer-left .t-checkbox__content {
  display: flex !important;
  align-items: center;
  width: auto !important;
  height: 36rpx !important;
  position: relative;
  padding-left: 44rpx;
}

.footer-left .t-checkbox__icon {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx !important;
  height: 36rpx !important;
  margin: 0;
}

.footer-left .t-checkbox__border {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx !important;
  height: 36rpx !important;
}

.footer-left .t-checkbox__label {
  display: block !important;
  font-size: 28rpx;
  color: #333;
  line-height: 36rpx;
  white-space: nowrap;
  margin: 0;
}

.total-price {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-left: 24rpx;
}

.btn-primary {
  min-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background: linear-gradient(135deg, #FF5F15, #FF7A3E);
  color: #fff;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 95, 21, 0.2);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 95, 21, 0.1);
}

.submit-btn {
  min-width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #fa4126;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0 32rpx;
}

.submit-btn.disabled {
  background-color: #ccc;
  pointer-events: none;
}

/* 自定义复选框样式 */
.t-checkbox {
  --td-checkbox-icon-checked-color: #FF5F15;
  --td-checkbox-icon-color: #ddd;
  --td-checkbox-font-size: 28rpx;
  padding: 0;
  transform: scale(0.85);
  background: transparent !important;
  margin: 0;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.t-checkbox__icon {
  font-size: 36rpx !important;
  background: transparent !important;
  margin: 0;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 36rpx !important;
  height: 36rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.t-checkbox__content {
  margin: 0;
  padding: 0;
  background: transparent !important;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  position: relative;
}

.t-checkbox__border {
  background: transparent !important;
  width: 36rpx !important;
  height: 36rpx !important;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.t-checkbox__label {
  display: none !important;
}

/* 确保选中和未选中状态的大小一致 */
.t-checkbox.t-checkbox--checked .t-checkbox__icon,
.t-checkbox.t-checkbox--checked .t-checkbox__content,
.t-checkbox.t-checkbox--checked .t-checkbox__border {
  width: 36rpx !important;
  height: 36rpx !important;
}

/* 自定义计数器样式 */
.t-stepper {
  --td-stepper-input-width: 80rpx;
  --td-stepper-input-height: 52rpx;
  --td-stepper-border-radius: 8rpx;
  --td-stepper-button-color: #FF5F15;
  background: #fff;
  padding: 4rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-left: auto;
}
