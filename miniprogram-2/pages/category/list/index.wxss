.goods-list-page {
  padding: 24rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  padding: 48rpx 0;
  text-align: center;
}

.goods-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.goods-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.goods-image {
  width: 100%;
  height: 330rpx;
  background: #f5f5f5;
}

.goods-info {
  padding: 16rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 120rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-top: 48rpx;
}

.empty-tips {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

.no-more {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 48rpx 0;
} 