.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #fff;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.log-list {
  flex: 1;
  padding: 24rpx;
}

.log-list.empty {
  display: flex;
  align-items: center;
  justify-content: center;
}

.log-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.log-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.log-type {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

.log-type.NETWORK {
  background: #e6f4ff;
  color: #1890ff;
}

.log-type.BUSINESS {
  background: #fff7e6;
  color: #fa8c16;
}

.log-type.VALIDATION {
  background: #f6ffed;
  color: #52c41a;
}

.log-type.SYSTEM {
  background: #fff1f0;
  color: #f5222d;
}

.log-code {
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
}

.log-time {
  font-size: 24rpx;
  color: #999;
  flex: 1;
  text-align: right;
}

.log-content {
  margin-bottom: 16rpx;
}

.log-message {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.log-stack {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

.log-context {
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}

.context-item {
  display: flex;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.context-item .label {
  color: #999;
  width: 80rpx;
}

.context-item .value {
  color: #666;
  flex: 1;
} 