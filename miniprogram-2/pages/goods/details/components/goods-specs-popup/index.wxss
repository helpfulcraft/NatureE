.popup-container {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  position: relative;
  padding: 32rpx;
}

.popup-container .popup-close {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  z-index: 9;
  color: #999999;
}

.popup-sku-header {
  display: flex;
  padding: 30rpx 0;
}

.popup-sku-header__img {
  width: 176rpx;
  height: 176rpx;
  border-radius: 8rpx;
}

.popup-sku-header__goods-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.popup-sku__goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.popup-sku__selected-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.popup-sku-body {
  max-height: 600rpx;
}

.popup-sku-group {
  margin-bottom: 32rpx;
}

.popup-sku-group__title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.popup-sku-group__content {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.popup-sku-value {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
  font-size: 24rpx;
  color: #333;
}

.popup-sku-value.selected {
  background: #fff5f5;
  border-color: #fa4126;
  color: #fa4126;
}

.popup-sku-value.disabled {
  color: #ccc;
  border-color: #eee;
  background: #f5f5f5;
}

.popup-sku-stepper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
}

.popup-sku-stepper__title {
  font-size: 28rpx;
  color: #333;
}

.popup-sku-actions {
  margin-top: 48rpx;
}

.sku-operate {
  flex: 1;
}

.selected-sku-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sku-operate-addCart {
  background: #ffeae4;
  color: #fa4126;
}

.sku-operate-buyNow {
  background: #fa4126;
  color: #fff;
}

.disabled {
  background: #f5f5f5 !important;
  color: #999 !important;
  cursor: not-allowed;
}

.single-confirm-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  background: #fa4126;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 48rpx;
}
