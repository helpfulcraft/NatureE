/* pages/goods/details/index.wxss */
.goods-swiper {
  width: 100%;
  height: 750rpx;
  position: relative;
  border-radius: 0 0 32rpx 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.goods-swiper__inner {
  width: 100%;
  height: 100%;
}

.goods-swiper__placeholder {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-info {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 40rpx;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.goods-info:active {
  transform: scale(0.98);
}

.goods-info__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goods-price {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  color: #FF5F15;
  font-size: 40rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(255, 95, 21, 0.2);
}

.goods-price__original {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
}

.goods-sales {
  font-size: 24rpx;
  color: #999;
}

.goods-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
  line-height: 1.4;
}

.goods-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.goods-specs {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.goods-specs:active {
  background: rgba(255, 255, 255, 0.9);
  transform: scale(0.98);
}

.goods-specs__header {
  flex: 1;
}

.goods-specs__label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.goods-specs__value {
  font-size: 28rpx;
  color: #666;
}

.goods-detail {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 40rpx;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.goods-detail__title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 24rpx;
}

.goods-detail__title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #FF5F15, #1D953F);
  border-radius: 4rpx;
}

.goods-detail__empty {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.goods-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.goods-actions__left {
  display: flex;
  margin-right: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.9);
}

.goods-actions__right {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.goods-actions__btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.add-cart-btn {
  background: linear-gradient(135deg, #FF8F45, #FF5F15);
  color: #fff;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 95, 21, 0.3);
}

.buy-now-btn {
  background: linear-gradient(135deg, #2FB344, #1D953F);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(29, 149, 63, 0.3);
}

.add-cart-btn:active,
.buy-now-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.home-btn,
.cart-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.home-btn:active,
.cart-btn:active {
  transform: scale(0.9);
}

.home-btn image,
