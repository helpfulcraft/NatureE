  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
  opacity: 0.8;
}

.home-btn text,
.cart-btn text {
  font-size: 22rpx;
  color: #666;
}

.right-btns {
  display: flex;
  gap: 20rpx;
}

