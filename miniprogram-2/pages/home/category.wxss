.category-page {
  height: 100vh;
  background: #fff;
}

.category-container {
  display: flex;
  height: 100%;
}

.category-list {
  width: 200rpx;
  height: 100%;
  background: #f5f5f5;
}

.category-item {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  position: relative;
}

.category-item.active {
  background: #fff;
  color: #fa4126;
  font-weight: bold;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #fa4126;
  border-radius: 0 4rpx 4rpx 0;
}

.goods-list {
  flex: 1;
  height: 100%;
}

.goods-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.goods-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.goods-info {
  padding: 16rpx;
}

.goods-name {
  font-size: 26rpx;
  color: #333;
  line-height: 36rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
} 