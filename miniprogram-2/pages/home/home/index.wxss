/* pages/home/home/index.wxss */
.home {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Banner */
.t-swiper {
  margin: 0 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.t-swiper-item {
  width: 100%;
  height: 300rpx;
}

.t-swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 分类导航 */
.category-grid {
  margin-top: 24rpx;
}

/* 商品列表 */
.goods-list {
  margin-top: 24rpx;
  padding-bottom: env(safe-area-inset-bottom);
}