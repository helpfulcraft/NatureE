.search-page {
  padding: 24rpx;
  background: #fff;
  min-height: 100vh;
}

.search-header {
  padding: 16rpx 24rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 1;
}

/* 搜索历史 */
.search-history,
.hot-search {
  margin-top: 40rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.history-list,
.hot-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.history-item,
.hot-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
}

.search-suggest {
  margin-top: 24rpx;
}

.suggest-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.suggest-item:last-child {
  border-bottom: none;
}

/* 搜索结果 */
.search-result {
  padding: 20rpx;
}

.result-list {
  margin-top: 20rpx;
} 