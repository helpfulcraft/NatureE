.user-center {
  min-height: 100vh;
  background: linear-gradient(135deg, rgba(255, 95, 21, 0.08), rgba(29, 149, 63, 0.05));
  padding: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.8));
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 1px solid rgba(255, 95, 21, 0.1);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.user-info:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-right {
  margin-left: 24rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.phone {
  font-size: 28rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: rgba(255, 95, 21, 0.1);
  border-radius: 6rpx;
  display: inline-block;
}

.login-btn {
  font-size: 32rpx;
  color: #FF5F15;
  font-weight: 500;
}

.order-status {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.8));
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1px solid rgba(255, 95, 21, 0.1);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}

.title::before {
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #FF5F15, #FF7A3E);
  margin-right: 16rpx;
  border-radius: 6rpx;
}

.status-list {
  display: flex;
  justify-content: space-between;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  transition: all 0.3s ease;
  padding: 16rpx;
  border-radius: 12rpx;
}

.status-item:active {
  transform: scale(0.95);
  background: rgba(255, 95, 21, 0.1);
}

.status-item .t-icon {
  color: #FF5F15;
  margin-bottom: 12rpx;
}

.status-item .text {
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
}

.menu-list {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.8));
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 8rpx 24rpx;
  border: 1px solid rgba(255, 95, 21, 0.1);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1px solid rgba(255, 95, 21, 0.1);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  transform: translateX(8rpx);
  background: rgba(255, 95, 21, 0.05);
}

.menu-item .t-icon {
  color: #FF5F15;
}

.menu-item .text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  margin-left: 24rpx;
}

.usercenter-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.order-group {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.order-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.order-title text {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.order-title-right {
  display: flex;
  align-items: center;
}

.order-title-right text {
  font-size: 26rpx;
  color: #999;
  font-weight: normal;
}

.version {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  padding: 40rpx 0;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 自定义头像组件样式 */
.t-avatar {
  border: 4rpx solid rgba(255, 95, 21, 0.2);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 装饰元素 */
.user-info::after,
.order-status::after,
.menu-list::after {
  content: '';
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, rgba(255, 95, 21, 0.2), rgba(29, 149, 63, 0.2));
  border-radius: 50%;
  filter: blur(20rpx);
  opacity: 0.5;
  z-index: -1;
  pointer-events: none;
}

/* 退出登录区域 */
.logout-section {
  margin: 48rpx 0;
  padding: 0 32rpx;
}

.btn-logout {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 44rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 95, 21, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.btn-logout:active {
  transform: translateY(2rpx);
  background: rgba(255, 95, 21, 0.1);
  color: #FF5F15;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 对话框样式自定义 */
.t-dialog__confirm {
  color: #FF5F15 !important;
}

.t-dialog__content {
  padding: 32rpx !important;
  color: #666 !important;
}

.t-dialog__title {
  color: #333 !important;
  font-weight: 500 !important;
}

.t-dialog__footer {
  padding: 32rpx !important;
}

.t-dialog__button {
  font-size: 32rpx !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  border-radius: 40rpx !important;
  margin: 0 16rpx !important;
}

.t-dialog__button--confirm {
  background: linear-gradient(135deg, #FF5F15, #FF7A3E) !important;
  color: #fff !important;
  border: none !important;
  box-shadow: 0 4rpx 12rpx rgba(255, 95, 21, 0.2) !important;
}

.t-dialog__button--confirm:active {
  transform: translateY(2rpx) !important;
  box-shadow: 0 2rpx 8rpx rgba(255, 95, 21, 0.1) !important;
}

.t-dialog__button--cancel {
  border: 1px solid #ddd !important;
  color: #666 !important;
}

.t-dialog__button--cancel:active {
  background: #f5f5f5 !important;
} 