.detail-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.order-status {
  background: #fff;
  padding: 48rpx 24rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 48rpx;
}

.address-card {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.address-info {
  flex: 1;
}

.user-info {
  margin-bottom: 12rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.goods-list {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  margin-bottom: 24rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
}

.goods-info {
  flex: 1;
  margin-left: 24rpx;
  overflow: hidden;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-specs {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.goods-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-num {
  font-size: 24rpx;
  color: #999;
}

.order-info,
.amount-info {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.info-item:last-child {
  margin-bottom: 0;
}

.order-no {
  display: flex;
  align-items: center;
}

.total {
  font-size: 30rpx;
  color: #333;
  border-top: 2rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.total-price {
  color: #fa4126;
  font-weight: bold;
}

.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.action-btn {
  flex: 1;
} 