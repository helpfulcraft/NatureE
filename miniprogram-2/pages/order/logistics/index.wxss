.logistics-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.logistics-header {
  background: #fff;
  padding: 48rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.status-info {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 16rpx;
}

.express-info {
  border-top: 2rpx solid #f5f5f5;
  padding-top: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #999;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.tracking-no {
  display: flex;
  align-items: center;
}

.logistics-traces {
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
}

.traces-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.traces-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
} 