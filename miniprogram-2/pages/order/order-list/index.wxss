.order-list-page {
  min-height: 100vh;
  background: linear-gradient(135deg, rgba(255, 95, 21, 0.08), rgba(29, 149, 63, 0.05));
  padding: 24rpx;
  padding-top: calc(88rpx + 24rpx);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 标签页样式 */
.tabs-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.8));
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 95, 21, 0.1);
}

.tabs {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #FF5F15;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(to right, #FF5F15, #FF7A3E);
  border-radius: 3rpx;
}

/* 订单列表样式 */
.order-list-container {
  height: calc(100vh - 88rpx - env(safe-area-inset-bottom));
}

.order-item {
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.8));
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  overflow: hidden;
  border: 1px solid rgba(255, 95, 21, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.order-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1px solid rgba(255, 95, 21, 0.1);
  background: rgba(255, 255, 255, 0.5);
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #FF5F15;
  font-weight: 500;
}

.goods-list {
  padding: 24rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  position: relative;
}

.goods-item:not(:last-child) {
  border-bottom: 1px solid rgba(255, 95, 21, 0.1);
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-sku {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin: 8rpx 0;
  padding: 4rpx 12rpx;
  background: rgba(255, 95, 21, 0.1);
  border-radius: 6rpx;
}

.sku-label {
  color: #999;
  margin-right: 8rpx;
}

.sku-value {
  color: #666;
}

.goods-price-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.goods-price {
  font-size: 32rpx;
  color: #FF5F15;
  font-weight: bold;
}

.goods-count {
  font-size: 26rpx;
  color: #999;
}

.order-footer {
  padding: 24rpx;
  border-top: 1px solid rgba(255, 95, 21, 0.1);
  background: rgba(255, 255, 255, 0.5);
}

.total-price {
  text-align: right;
  font-size: 26rpx;
  color: #666;
}

.total-price .price {
  font-size: 32rpx;
  color: #FF5F15;
  font-weight: bold;
  margin-left: 8rpx;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
  gap: 20rpx;
}

.btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 32rpx;
  padding: 0 32rpx;
}

.btn-default {
  color: #666;
  background: #f5f5f5;
  border: 1px solid #ddd;
}

.btn-primary {
  color: #fff;
  background: linear-gradient(135deg, #FF5F15, #FF7A3E);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 95, 21, 0.2);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 95, 21, 0.1);
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 32rpx 0;
  color: #999;
  font-size: 24rpx;
}
