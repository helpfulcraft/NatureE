/* pages/order/order-payment/index.wxss */
.payment-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 支付金额 */
.amount-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.amount-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.amount-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.currency {
  font-size: 40rpx;
  color: #333;
}

.amount .value {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
}

/* 订单信息 */
.order-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.amount {
  text-align: center;
  margin-bottom: 40rpx;
}

.order-detail {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.item .value {
  font-size: 28rpx;
  color: #333;
}

/* 支付方式 */
.payment-methods {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  position: relative;
}

.method-item .name {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.check-icon {
  position: absolute;
  right: 0;
  color: #0052d9;
}

/* 底部按钮 */
.bottom-button {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #ff4444;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.submit-btn.disabled {
  background-color: #ccc;
  color: #fff;
}

.submit-btn::after {
  border: none;
}