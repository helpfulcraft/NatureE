.result-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 48rpx 32rpx;
}

.result-content {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 64rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.icon-wrapper.success {
  background-color: rgba(0, 170, 0, 0.1);
  color: #07c160;
}

.icon-wrapper.fail {
  background-color: rgba(250, 65, 38, 0.1);
  color: #fa4126;
}

.message {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 64rpx;
}

.buttons {
  width: 100%;
}

.back-btn {
  margin-top: 24rpx;
}

.status-icon {
  margin-bottom: 48rpx;
}

.status-info {
  margin-bottom: 80rpx;
}

.status-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.status-desc {
  font-size: 28rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 48rpx;
}

.action-btn {
  flex: 1;
} 