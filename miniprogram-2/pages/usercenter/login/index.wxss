/* pages/usercenter/login/index.wxss */
.login-container {
  min-height: 100vh;
  background-color: #fff;
  padding: 48rpx 48rpx 80rpx;
  display: flex;
  flex-direction: column;
}

.logo-wrap {
  margin-top: 120rpx;
  text-align: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.btn-wrap {
  margin-top: 120rpx;
}

.login-btn {
  width: 100% !important;
  background-color: #ff5f15 !important;
  border-radius: 48rpx !important;
}

.tips {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.tip-item {
  margin: 0 4rpx;
}

.link {
  color: #ff5f15;
  display: inline;
}