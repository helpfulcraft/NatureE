/* pages/usercenter/person-info/index.wxss */
.person-info {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.info-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f6f6f6;
}

.info-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #333;
}

.item-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.t-dialog__body {
  padding: 32rpx !important;
}

.popup-content {
  background: #fff;
  border-radius: 16rpx;
  width: 600rpx;
}

.popup-header {
  padding: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-body {
  padding: 32rpx;
}

.popup-footer {
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
}